/* components/detail/detail.wxss */

page {
  background-color: #f6f7f9;
  line-height: 1.2;
  margin-bottom: 49px;
}

.header {
  background-color: #fff;
}

/* header-backgroundimg */
.header-image {
  width: 100%;
  background-color: #292138;
  position: absolute;
  overflow: hidden;
  min-height: 180px; 
}

.header-image canvas {
  opacity: .2;
}

/* header-main */
.header-main {
  position: relative;
  overflow: hidden;
}

.header-main .poster {
  float: left;
  height: 128px;
  width: 96px;
  margin-left: 15px;
  margin-top: 20px;
}

.header-main .info {
  position: relative;
  box-sizing: border-box;
  margin: 20px 15px 16px 127px;
  min-height: 128px;
}

.header-main .info .top {
  min-height: 100px;
  margin-bottom: 10px;
}

.header-main .info .title {
  font-size: 17px;
  font-weight: 700;
  min-height: 44px;
  line-height: 22px;
  color: #fff;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 13px;
}

.header-main .info .stars-score {
  margin-bottom: 18px;
  height: 20px;
}

.header-main .info .stars-score .score {
  font-size: 14px;
  color: #fdb146;
  margin-right: 6px;
}

.header-main .info .stars-score .stars {
  margin-left: 0;
  line-height: normal;
  display: inline-block;
  overflow: visible;
  margin-right: 3px;
}

.header-main .info .stars-score .stars view {
  margin-right: 2px;
  display: inline;
  float: none;
}

.stars view image {
  width: 8px;
  height: 8px;
  margin-bottom: 1px;
}

.price-viewne {
  display: flex;
  align-items: center;
  color: #fff;
}

.price-viewne .price-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.price-viewne .price-info .price {
  font-size: 24px;
  margin-right: 3px;
}

.price-viewne .price-info .qi {
  font-size: 12px;
}

.header-main .concern-comment {
  color: #fff;
  margin: 16px 15px;
}

.header-main .concern-comment .comment, .header-main .concern-comment .concern {
  background: #fff;
  background: hsla(0,0%,100%,.1);
  height: 30px;
  border-radius: 3px;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
  width: 48%;
  box-sizing: border-box;
}

.header-main .concern-comment .comment {
  float: right;
  margin-left: 4%;
}

.header-main .concern-comment .concern {
  overflow: hidden;
}

.header-main .concern-comment .comment image, .header-main .concern-comment .concern image {
  margin-bottom: -2px;
  margin-right: 4px;
}

.header-main .concern-comment image {
  width: 15px;
  height: 14px;
  vertical-align: -1px;
}

/* header-bottom */
.header-bottom {
  padding-left: 14px;
}

.header-bottom .time-range {
  font-size: 15px;
  padding-top: 24px;
}

.header-bottom .venue {
  display: flex;
  align-items: center;
  height: 33px;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 15px;
  padding-top: 16px;
}

.header-bottom .venue .inner {
  margin-right: 11px;
  overflow: hidden;
  flex: 1;
}

.header-bottom .venue .inner .name {
  font-size: 15px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.header-bottom .venue .icon {
  padding: 0 22px;
  border-left: 1px solid #f5f5f5;
}

.header-bottom .venue .icon image {
  width: 20px;
  height: 24px;
}

.header-bottom .service-info {
  position: relative;
  padding: 16px 0;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
}

.header-bottom .service-info .text {
  margin-right: 20px;
  font-size: 13px;
  color: #333;
}

.header-bottom .service-info .service-item {
  margin-right: 10px;
}

.header-bottom .service-info .service-item image {
  width: 12px;
  height: 12px;
  margin-right: 4px;
}

.header-bottom .service-info .service-item text {
  font-size: 14px;
  color: #262626;
}

.arr-right {
  background-image: url(https://static.piaoniu.com/nuxt-static/img/arr-right.1655c6a.png);
  right: 14px;
  background-size: 8px 13px;
  height: 13px;
  width: 8px;
  position: absolute;
  margin-top: -7px;
}

/* bottom-container */
.bottom-container {
  position: fixed;
  display: flex;
  height: 49px;
  width: 100%;
  bottom: 0;
  z-index: 9;
}

.bottom-container .custom-service {
  width: 65px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #e6e6e6;
}

.bottom-container .custom-service .icon {
  width: 20px;
  height: 20px;
  margin-bottom: 2px;
  background-size: contain;
  background-image: url(https://static.piaoniu.com/nuxt-static/img/custom-service.89c653b.png);
}

.bottom-container .custom-service .text {
  height: 16px;
  line-height: 16px;
  text-align: center;
  font-size: 11px;
  color: #666;
}

.bottom-container .bottom-btn {
  background-color: #ff2661;
  flex: 1;
  font-size: 16px;
  line-height: 49px;
  min-width: 110px;
  height: 100%;
  color: #fff;
  text-align: center;
  box-sizing: border-box;
}

/* no-ticket */
.inform-success-pop {
  height: 206px;
  position: fixed;
  z-index: 11;
  left: 26px;
  right: 26px;
  top: 50%;
  margin-top: -103px;
  background: #fff;
  border-radius: 10px;
}

.inform-success-pop .concern-success-icon {
  background-image: url(https://static.piaoniu.com/nuxt-static/img/concern.1be1f32.png);
  width: 25px;
  height: 23px;
  background-size: 50px 23px;
  background-position: 25px 0;
  margin: 44px auto 5px;
}

.inform-success-pop .concern-success-text {
  font-size: 18px;
  font-weight: 600;
  text-align: center;
  margin-bottom: 15px;
}

.inform-success-pop .inform-message {
  color: #666;
  text-align: center;
}

.inform-success-pop .confirm-btn {
  height: 50px;
  color: #ff5636;
  text-align: center;
  line-height: 50px;
  position: absolute;
  width: 100%;
  bottom: 0;
  border-top: 1px solid #e6e6e6;
}

.sections {
  margin-top: 10px;
  color: #333;
}

.buy-note, .introduce {
  background-color: #fff;
  margin-top: 10px;
  padding-left: 15px;
  padding-right: 15px;
}

.buy-title {
  line-height: 50px;
  font-size: 16px;
  font-weight: 700;
}

.content {
  height: 200px;
  overflow: hidden;
}

.clickMore {
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: rgb(85,176,238);
}

.all-comment {
  background: #fff;
  margin-top: 10px;
  padding-left: 15px;
  padding-right: 15px;
  margin-bottom: 50px;
}

.com-top {
  display: flex;
  line-height: 50px;
  font-size: 16px;
  font-weight: 700;
}

.wirteCom {
  flex: 1;
  text-align: right;
  color: red;
}
