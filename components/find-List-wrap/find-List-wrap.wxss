.find-list{
  background-color: #f5f5f5;
}
.tag-list-wrap{
  height: 156rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 28rpx 28rpx 14rpx;
  display: flex;
}
.list-item{
  margin-bottom: 20rpx;

}
.list-item:first-of-type{
  margin-bottom: 0;
  background-color: #fff;
}
.tag-list-wrap .tag-item-wrap{
  margin-right: 8rpx;
  height: 114rpx;
  width: 200rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
  box-shadow: 0 0 20rpx #eee;
  overflow: hidden;
}
.tag-list-wrap .tag-item-wrap:last-of-type{
  padding-right: 50rpx;
}
.tag-list-wrap .tag-item{
  width: 100%;
  height: 100%;
  background-size: cover;
  color: #fff;
  font-size: 24rpx;
  position: relative;
}
.tag-list-wrap .tag-item .item-text{
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  padding-top: 29rpx;
  width: 120rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}