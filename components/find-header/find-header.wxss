/* components/find-header.wxss */
.header{
  height:88rpx;
  width:100%;
  display: flex;
  font-size: 32rpx;
  align-items: center;
  justify-content: center;
  color:#666;
  border-bottom:2rpx solid #f2f2f2;
  background-color: #fff;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 999;
}
.header-container{
  display: flex;
}
.tag-item{
  margin: 0 38rpx;
}
.header .active{
  color:#262626;
  font-weight: 600;
}
.add-circles{
  height:62rpx;
  width: 62rpx;
  position: absolute;
  right: 27rpx;
}
.add-circles .img{
  height:100%;
  width: 100%;
}