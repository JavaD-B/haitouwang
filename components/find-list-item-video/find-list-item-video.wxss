@import "/source/icon/icon.wxss";
.find-video-wrap{
  padding: 0 28rpx;
  background-color: #fff;
}
.find-video{
  width: 100%;
  height: 422rpx;
}
.find-video-header{
  height: 120rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  justify-content: space-between;
}
.find-video-header .header-left{
  display: flex;
  align-items: center;
}
.find-video-header .pic{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
}
.find-video-header .username{
  margin-left: 16rpx;
  color: #5f5f5f;
}
.find-video-header .follow{
  background-color: #ff0b51;
  width: 118rpx;
  height: 48rpx;
  border-radius: 4rpx;
  line-height: 48rpx;
  text-align: center;
  color: #fff;
}
.find-video-content{
  font-size: 28rpx;
  line-height: 42rpx;
}
.find-video-footer{
  display: flex;
  height: 66rpx;
  font-size: 24rpx;
  color: #8f8f8f;
  line-height: 66rpx;
}
.find-video-footer .space{
  height: 36rpx;
  width: 2rpx;
  background-color: #efefef;
  margin: 16rpx 32rpx;
}

.find-video-operate{
  padding-top: 30rpx;
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: space-around;
}
.find-video-operate .icon-tab{
  display: flex;
  align-items: center;
}
.find-video-operate .iconfont{
  font-size: 50rpx;
  line-height: 98rpx;
  color: #646464;
  margin-right: 16rpx;
}