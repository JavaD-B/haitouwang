@import "/source/icon/icon.wxss";
.find-list-item{
  padding: 0 28rpx;
  background-color: #fff;
}
.find-item-header{
  padding: 30rpx 0 23rpx;
  display: flex;
  align-items: center;
}
.find-item-header .find-item-user-pic{
  width: 72rpx;
  height: 72rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 12rpx;
}
.find-item-user-pic .user-avatar{
  width: 100%;
  height: 100%;
}


.find-item-header .find-item-user-name{
  font-size: 28rpx;
  color: #262626;
  margin-right: 10rpx;
}
.find-item-header .find-item-user-tag{
  color: #fff;
  width: 64rpx;
  height: 28rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  text-align: center;
}
.official{
  background: linear-gradient(to right,#ec6244,#ea4163);
}
.user{
  background-color: #ffbf23;
}

.find-item-content{
  font-size: 30rpx;
}
.item-stars{
  color: #a4a4a4;
  font-size: 22rpx;
  margin-bottom: 20rpx;
  display: flex;
}
.star-list{
  width: 120rpx;
  height: 26rpx;
  background-repeat: repeat-x;
  background-size: 24rpx;
  background-position-y: 5rpx;
}
.star-bg{
  background-image: url("https://dn-piaoniu-static.qbox.me/pc/ui/img/star-full.04f7ab77.png");
  height: 100%;
  background-repeat: repeat-x;
  background-size: 24rpx;
  background-position-y: 5rpx;
}
.item-text{
  margin-bottom: 20rpx;
}
.item-pic{
  display: flex;
  flex-shrink: 0;
  flex-wrap: wrap;
  margin-bottom: 36rpx;
}
.item-pic .pic{
  width: 222rpx;
  height: 222rpx;
  margin-top: 8rpx;
}
.item-pic .pic:nth-of-type(n/3){
  margin-right: 8rpx;
}

.item-video{
  height: 390rpx;
  width: 100%;
  border-radius: 10rpx;
  margin: 18rpx 0;
  background-size: cover;
  color: #fff;
  position: relative;
}
.item-video .video-play{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 80rpx;
  height: 80rpx;
  font-size: 80rpx;
}
.item-video .video-time{
  position: absolute;
  bottom: 34rpx;
  right: 24rpx;
  font-size: 22rpx;
}

.item-tags{
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
}
.item-tags .tag-item{
  border-radius: 25rpx;
  height: 52rpx;
  font-size: 24rpx;
  line-height: 52rpx;
  padding: 0 20rpx;
}
.item-tags .tag-item:first-of-type{
  background-color: #fff1f4;
  color: #ff276c;
}
.icon-yiqi{
  width: 24rpx;
  height: 24rpx;
}
.item-detail{
  height: 100rpx;
  width: 100%;
  background-color: #f3f4f6;
  display: flex;
  padding: 10rpx;
}
.item-detail .poster{
  width: 76rpx;
  height: 100rpx;
  margin-right: 14rpx;
}
.item-detail .detail{
  display: flex;
  flex-direction: column;
}
.item-detail .detail .title{
  font-size: 26rpx;
  color: #151716;
  font-weight: 600;
  margin-bottom: 30rpx;
}
.item-detail .detail .time{
  color: #949597;
  font-size: 24rpx;
}

.find-item-footer{
  height: 80rpx;
  width: 100%;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #9f9f9f;
  font-size: 24rpx;
}

.find-item-footer-right{
  display: flex;
  height: 100%;
}

.footer-comment,.footer-zan{
  margin-left: 50rpx;
  display: flex;
  align-items: center;
}
.iconfont{
  margin-right: 14rpx;
  width: 36rpx;
  height: 36rpx;
}
