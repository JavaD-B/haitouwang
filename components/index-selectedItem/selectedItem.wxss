.selected-item{
  width: 226rpx;
  margin: 0 36rpx;
  position: relative;
}
.discount{
  position: absolute;
    top: -6rpx;
    left: 4rpx;
    color: #fff;
    width: 56rpx;
    height: 60rpx;
    text-align: center;
    background-image: url("data:image/png;base64,");
    background-size: 100%;
}
.text{
  position: relative;
    font-size: 32rpx;
    width: 100%;
    height: 100%;
}
.num{
  font-size: 44rpx;
  font-weight: 700;
  position: absolute;
  left: 2rpx;
  top: 0;
}
.fraction{
  font-size: 24rpx;
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}
.unit{
  font-size: 16rpx;
  transform: scale(.8);
  transform-origin: left;
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
}
.item-image image{
  width: 226rpx;
  height: 280rpx;
}
.item-title{
  font-size: 26rpx;
  font-weight: 800;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-foot{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.item-price{
color: #f23670;
font-weight: 700;
}
.item-type{
  margin-top: 5rpx;
  font-size: 16rpx;
  width: 72rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  border:1px solid #e3e3e3;
  color: #9e9e9e;
}